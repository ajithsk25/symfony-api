{% extends "IgnithoAdminBundle:Layout:loginLayout.html.twig" %}

{% block content %}
    <h1>Pages list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Body</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td><a href="{{ path('ignitho.admin.page_show', { 'id': page.id }) }}">{{ page.id }}</a></td>
                <td>{{ page.title }}</td>
                <td>{{ page.body }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('ignitho.admin.page_show', { 'id': page.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('ignitho.admin.page_edit', { 'id': page.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ignitho.admin.page_new') }}">Create a new page</a>
        </li>
    </ul>
{% endblock %}
