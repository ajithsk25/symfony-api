<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        {% stylesheets 'bundles/ignithoadmin/css/*' filter='cssrewrite' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
    {% block navbar %}
        <div class="container-fluid">
            <nav class="navbar navbar-toggleable-md fixed-top navbar-inverse bg-primary navbar-ri">
                <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="navbar-brand" href="{{ path('ignitho.admin.front_page') }}">Symfony API</a>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('ignitho.admin.home') }}">Home <span class="sr-only">(current)</span></a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('ignitho.admin.login') }}">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('ignitho.admin.register') }}">Register</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    {% endblock %}
    <div class="container-fluid container">
        {% block content %}{% endblock %}
    </div>
    {% block javascripts %}
        {% javascripts
            '@IgnithoAdminBundle/Resources/public/js/jquery-3.2.1.min.js'
            '@IgnithoAdminBundle/Resources/public/js/*'%}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}
</body>
</html>